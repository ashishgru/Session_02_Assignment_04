<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CodeTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#cad1cf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentStart">false</item>
    </style>

    <style name="CodeEditView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#d7dede</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CodeButtonView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#29b69a</item>
        <item name="android:background">#d3d3d3</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>